@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Kategori Ekleme Sayfası";
}
 @* model eklemeyi unutma*@
@model DBFirstProje.Web.Models.Category
<div class="container-fluid">
    <h1>KATEGORİ EKLE</h1>
    <hr />
    <div class="col-md-6">
        <form asp-controller="Category" asp-action="Add" method="post">
          
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <input type="reset" class="btn btn-danger mt-2" value="Formu Temizle"/>
            <input type="submit" class="btn btn-primary mt-2" value="Kategoriyi Kaydet"/>
        </form>
    </div>
    <hr />
    <div class="form-group m-2">
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark">Kategoriler Listesine git...</a>
    </div>
    <hr />
</div>