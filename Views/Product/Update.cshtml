@{
    Layout = "_Layout";
    ViewData["Title"] = "Ürün Güncelleme SAyfası";
}
@model DBFirstProje.Web.Models.Product
<div class="container-fluid">
    <h1>ÜRÜNÜ GÜNCELLE</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Update" method="post">
                @*<div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" disabled/>
        </div>*@

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Stock" class="control-label"></label>
                    <input asp-for="Stock" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <img src="/@Model.ImageUrl" class="urun-resmi rounded" />
                    @*<img src="~/@Model.ImageUrl" class="urun-resmi rounded" />*@
                </div>
                <!--sonradan-->
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Width" class="control-label"></label>
                    <input asp-for="Width" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Height" class="control-label"></label>
                    <input asp-for="Height" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                </div>
                <!-- eklendi.-->

                <div class="form-group m-2">
                    <button class="btn btn-success" type="submit">Güncelle</button>
                </div>

            </form>
        </div>
    </div>
    <hr />
    <a class="btn btn-dark" asp-action="Index" asp-controller="Product">Ürünler Listesine Dön...</a>
    <hr />
</div>